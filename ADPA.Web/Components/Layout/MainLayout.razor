@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4" style="background: #594ae2; color: white;">
            <h4 style="color: white; margin: 0;">🚀 ADPA Dashboard</h4>
            <div style="margin-left: auto;">
                <span style="margin-right: 20px;">📊 Analytics & Reporting Platform</span>
                <a href="/login" style="color: white; text-decoration: none;">Login</a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
.page {
    position: relative;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.sidebar {
    background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%);
    width: 260px;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
}

.top-row {
    background-color: #594ae2;
    border-bottom: 1px solid #e5e5e5;
    display: flex;
    align-items: center;
    height: 3.5rem;
    padding: 0 1.5rem;
}

main {
    flex: 1;
    margin-left: 260px;
}

.content {
    padding-top: 1.1rem;
}
</style>
